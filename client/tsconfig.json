{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    //    "noUnusedLocals": true,
    //    "noUnusedParameters": true,
    //    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.stories.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/components",
    "src/custom.d.ts",
    "src/vue3-emoji-picker.d.ts",
    "src/index.d.ts"
  ],
  "files": ["./auto-imports.d.ts"],
  "exclude": ["node_modules"],
  "types": ["vitest/globals"]
}
